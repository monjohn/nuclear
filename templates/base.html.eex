<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @page.title %> - <%= @site.name %></title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@200..900">

    <link rel="stylesheet" href="/assets/css/styles.css">
  </head>
  <body style="margin: 0; padding; 0;">
    <header style="display: flex;">
      <div style="display: flex; justify-content: space-between; width: 66%; margin: 0 auto; align-items: center">
        <div style="">
          <h1 style="margin: 1rem 0 0;"><a href="<%= base() %>"><%= @site.name %></a></h1>
          <p style="margin: 0.5rem 0 1rem 0;"><%= @site.description %></p>
        </div>
        <%= include "nav" %>
      </div>
    </header>
    <main style="width: 66%; margin: 0 auto; padding: 4rem;">
      <%= @contents %>
    </main>
  </body>
</html>
